{
  "firestore": {
    "rules": "./lib/collections/firestore.rules",
    "indexes": "./lib/collections/firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm run build",
    "source": "."
  },
  "hosting": {
    "public": "./lib/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "./lib/storage.rules"
  },
  "emulators": {
    "firestore": {
      "port": "8080"
    }
  }
}
