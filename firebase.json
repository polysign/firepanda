{
  "firestore": {
    "rules": "./firebase/firestore.rules",
    "indexes": "./firebase/firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix run build",
    "source": "./src/functions"
  },
  "hosting": {
    "public": "./dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "./firebase/storage.rules"
  },
  "emulators": {
    "firestore": {
      "port": "8080"
    }
  }
}
